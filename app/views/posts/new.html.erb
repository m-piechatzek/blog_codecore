<h1>New Post (blog)</h1>

<%= @post.errors.full_messages.join(", ") %>

<%= form_for @post do |f| %>
<div class="form-group"><p>

<%= f.label :title %>
<%= f.text_field(:title, {class: "form-control"}) %>
</p>
</div>
<div class="form-group"><p>
<%= f.label :blog %>
<%=  f.text_area(:blog, {class: "form-control"}) %>
</p>
</div>
<div class="form-group">
<%=  f.collection_check_boxes :tag_ids, Tag.order(:name), :id, :name %>
</div>
<div>
<%= f.submit "Save Blog" %>
</div>
<% end %>
