<h1>Edit Blog</h1>

<%= form_for @post, url: edit_show_path do |f| %>

<div class="form-group">
  <%= f.label(:title)%>
  <%= f.text_field(:title, {class: "form-control"}) %>
</div>
<div class="form-group">
  <%= f.label :blog %>
  <%= f.text_area(:blog, {class: "form-control"}) %>
</div>

  <%= f.submit "Update Blog" %>

<% end %>
